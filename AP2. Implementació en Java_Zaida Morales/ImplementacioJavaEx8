public class ImplementacioJavaEx8 {

    private static final String MSG_1 = "Introduce un numero:";
    private static final String MSG_2 = "Introduce un apartado:";
    private static final String MSG_3 = "Cuantos numeros quieres introducir:";
    private static final String MSG_4 = "Introduce un numero";

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int num, usu, sum = 0, apartado, cant, cont = 0;
        System.out.println(MSG_2);
        apartado = sc.nextInt();

        switch (apartado) {
            case 1:
                do {
                    System.out.println(MSG_1);
                    num = sc.nextInt();
                } while (num != 0);
                System.out.println("Gracies per utilitzar el programa");
            case 2:
                System.out.println(MSG_3);
                cant = sc.nextInt();

                do {
                    System.out.println(MSG_4);
                    usu = sc.nextInt();
                    cont++;
                } while (cont != cant);
                System.out.println("Gracies per utilitzar el programa");
        }
    }
}
